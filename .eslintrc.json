{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-preact"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2, { "ignoreStrings": true }],
    "object-curly-spacing" : [2, "always"],
    "react/react-in-jsx-scope": 0
  }
}
